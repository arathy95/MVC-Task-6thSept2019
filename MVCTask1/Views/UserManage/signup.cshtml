@model MVCTask1.Models.ImageModel
@{
    ViewBag.Title = "signup";
}

<h2>signup</h2>

<div class="row">
    <div class="col-md-8">
        <h4>Sign Up</h4>
        <form method="post" action="@Url.Action("signup","UserManage")" class="form-horizontal">
            <div class="form-group">
                <label for="UserName" class="control-label">User Name: </label>
                @Html.TextBoxFor(Model => Model.UserName, htmlAttributes: new
           {
               @class = "form-control"

           })
            </div>

            <div class="form-group">
                <label for="EmailId" class="control-label">Email ID: </label>
                @Html.TextBoxFor(Model => Model.EmailId, htmlAttributes: new
           {
               @class = "form-control"

           })
            </div>

            <div class="form-group">
                <label for="Password" class="control-label">Password: </label>
                @Html.PasswordFor(Model => Model.Password, htmlAttributes: new
           {
               @class = "form-control"

           })
            </div>

            <div class="form-group">
                <label for="ConfirmPassword" class="control-label">Confirm Password: </label>
                @Html.PasswordFor(Model => Model.ConfirmPassword, htmlAttributes: new
           {
               @class = "form-control"

           })
            </div>

            <div class="form-group">
                <label for="MobileNo" class="control-label">Mobile No: </label>
                @Html.TextBoxFor(Model => Model.MobileNo, htmlAttributes: new
           {
               @class = "form-control"

           })
            </div>

            <div class="form-group">
                <label for="UserImageURL" class="control-label">Select User Image: </label>
                <input type="file" class="form-control" name="UserImageURL" id="UserImageURL" />

            </div>

            <div class="form-group">
                <label for="Gender" class="control-label">Gender: </label>
                <input type="radio" name="Gender" id="malegender" value="Male" class="radio-inline" />Male
                <input type="radio" name="Gender" id="femalegender" value="Female" class="radio-inline" />Female


            </div>

            <div class="form-group">
                <label for="CountryId" class="control-label">User Country: </label>
                @Html.DropDownList("CountryId", (IEnumerable<SelectListItem>)(ViewBag.CountryDataSource), "Select Country", new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="StateId" class="control-label">User State: </label>
                @Html.DropDownList("StateId", (IEnumerable<SelectListItem>)(ViewBag.StateDataSource), "Select State", new { @class = "form-control" })
            </div>

            <div class="btn-group">
                <button class="btn btn-primary" type="submit" class="glyphicon glyphicon-align-justify">Sign Up</button>
            </div>

        </form>
    </div>
    <div class="col-md-4">
        <h4>Sign In</h4>
    </div>
</div>

